<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConexionBDTMAUI.VM"
             x:Class="ConexionBDTMAUI.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:ConexionVM></vm:ConexionVM>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="5"
            Padding="4">
            <Button></Button>
            <ListView ItemsSource="{Binding ListadoPersonas}" SelectedItem="{Binding PersonaSelecionada}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="{Binding Foto}" WidthRequest="100" HeightRequest="100"></Image>
                                <VerticalStackLayout Padding="10">
                                <Label Text="{Binding Nombre}" />
                                <Label Text="{Binding Apellidos}" />
                                <Label Text="{Binding Telefono}" />
                            </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
